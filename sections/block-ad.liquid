{{ 'component--block-ad.css' | asset_url | stylesheet_tag }}

<div class="block-ad-wrap">
    
        {% if section.settings.text_placement == 'left' %}
            <div class="left text-side">
                <a href="{{ section.settings.button_link }}">
                    <span>{{ section.settings.section_subtitle }}</span>
                </a>
                <a href="{{ section.settings.button_link }}">
                    <h3>{{ section.settings.section_title }}</h3>
                </a>
            </div>

            <div class="right image-side" style="background-image: url('{{ section.settings.section_image | image_url }}'); background-size: cover; background-position: center center;"></div>
        {% else %}

            <div class="right image-side" style="background-image: url('{{ section.settings.section_image | image_url }}'); background-size: cover; background-position: center center;"></div>
            
            <div class="left text-side">
                <a href="{{ section.settings.button_link }}">
                    <span>{{ section.settings.section_subtitle }}</span>
                </a>
                <a href="{{ section.settings.button_link }}">
                    <h3>{{ section.settings.section_title }}</h3>
                </a>
            </div>

        {% endif %}
   

</div>

{% schema %}
    {
      "name": "Block Ad",
      "tag": "section",
      "class": "block-ad-section section",
      "settings": [
        {
          "type": "text",
          "id": "section_subtitle",
          "label": "Subtitle"
        },
        {
          "type": "textarea",
          "id": "section_title",
          "label": "Title"
        },
        {
            "type": "url",
            "id": "button_link",
            "label": "Button link"
        },
        {
            "type": "image_picker",
            "id": "section_image",
            "label": "Image"
        },
        {
            "type": "select",
            "id": "text_placement",
            "label": "Text placement",
            "options": [
                {
                "value": "left",
                "label": "Left"
                },
                {
                "value": "right",
                "label": "Right"
                }
            ],
            "default": "left"
        }

      ],
      "presets": [{
        "name": "Block Ad"
      }]
    }
  {% endschema %}