<div class="faq-wrapper">
    {% for block in section.blocks %}
        <details class="faq-accordion">
            <summary>
              <h2>{{ block.settings.title }}</h2>
              {% render 'icon--arrow-down' %}
            </summary>
    
            <div class="faq-body">
                {{ block.settings.body }}
            </div>
        </details>
    {% endfor %}
</div>

{% schema %}
    {
      "name": "FAQ",
      "tag": "section",
      "class": "faq-section",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "FAQ"
        }
      ],
      "blocks": [
         {
           "name": "FAQ",
           "type": "accordion",
           "settings": [
             {
               "type": "text",
               "id": "title",
               "label": "Title"
             },
             {
               "type": "richtext",
               "id": "body",
               "label": "Body"
             }
           ]
         }
       ],
       "presets": [
            {
                "name": "FAQ",
                "settings": {
                    "title": "FAQ"
                },
                "blocks": [
                    {
                        "type": "accordion"
                    },
                    {
                        "type": "accordion"
                    }
                ]
            }
        ]
    }
{% endschema %}    