<section class="featured-products section">

  {% comment %} Header {% endcomment %}
  <header class="section--header">
    <div class="section--header-wrapper">
      <h2 class="title" data-aos="fade-down">
        {{ section.settings.section_title }}
      </h2>
      <a class="view-more" data-aos="fade-in" data-aos-delay="800" href="/collections/featured">
        View more
      </a>
    </div>
  </header>

  {% comment %} Products {% endcomment %}
  <div class="featured-products--wrapper">
    {% for block in section.blocks %}
      {% for item in block.settings.featured_product %}
        <div class="featured-product">

        {% comment %} Image {% endcomment %}
          <div class="image">
            <a href="{{ item.url }}" title="{{ item.title }}">
              {% if item.featured_image != blank %}
                <img src="{{ item.featured_image | image_url: width: 500 }}" alt="{{ item.title }}" loading="lazy" />
              {% else %}
                {{ 'image' | placeholder_svg_tag }}
              {% endif %}
            </a>
          </div>

          {% comment %} Info {% endcomment %}
          <div class="info">
            <div class="title">
              <a href="{{ item.url }}" title="{{ item.title }}">
                <h5>{{ item.title }}</h5>
              </a>
            </div>
            <div class="artist type-writer">
              <a href="{{ item.url }}" title="{{ item.title }}">
                <h6>{{ item.vendor }}</h6>
              </a>
            </div>
          </div>

        </div>

      {% endfor %}
    {% endfor %}
  </div>

</section>

{% schema %}
  {
    "name": "Featured Products",
    "tag": "section",
    "class": "featured-products",
    "settings": [
      {
        "type": "text",
        "id": "section_title",
        "label": "Section Title"
      }, {
        "type": "page",
        "id": "link_destination",
        "label": "Link Destination"
      }
    ],
    "blocks": [
      {
        "name": "Product",
        "type": "text",
        "settings": [
          {
            "type": "product_list",
            "id": "featured_product",
            "label": "Featured Product",
            "limit": 1
          }
        ]
      }
    ]
  }
{% endschema %}