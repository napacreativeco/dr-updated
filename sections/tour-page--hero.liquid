<div class="spotlight-wrapper spotlight-swiper swiper">
    <div class="swiper-wrapper">
        {% for block in section.blocks %}

            <div class="swiper-slide">
                <div class="title">
                    {{ block.settings.title }}
                </div>
                <div class="body">
                    {{ block.settings.body | newline_to_br }}
                </div>
            </div>
    
        {% endfor %}
    </div>

    <div class="navigation-container">
        <div class="tour-spotlight-next">
          {% render 'svg--right-arrow' %}
        </div>
      </div>
</div>

{% schema %}
    {
      "name": "Tour Spolights",
      "tag": "section",
      "class": "tour-spotlight",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Tour Spotlight"
        }
      ],
      "blocks": [
         {
           "name": "Slide",
           "type": "slide",
           "settings": [
                {
                    "type": "richtext",
                    "id": "title",
                    "label": "Title"
                },
                {
                    "type": "richtext",
                    "id": "body",
                    "label": "Text"
                }
           ]
         }
       ]
    }
{% endschema %}
    