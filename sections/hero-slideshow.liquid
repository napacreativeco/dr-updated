{{ 'component--hero-slideshow.css' | asset_url | stylesheet_tag }}

{% for block in section.blocks %}

  {% if block.type == 'product' %}
    {{ 'component--hero-product-slide.css' | asset_url | stylesheet_tag }}
  {% elsif block.type == 'announcement' %}
    {{ 'component--hero-announcement-slide.css' | asset_url | stylesheet_tag }}
  {% elsif block.type == 'image' %}
    {{ 'component--hero-image-slide.css' | asset_url | stylesheet_tag }}
  {% endif %}

{% endfor %}

<div id="hero-swiper" class="hero-swiper swiper">
  <div class="swiper-wrapper">
    {% for block in section.blocks %}

      {% if block.type == 'product' %}
        <div class="swiper-slide slide__product" data-type="product">

          {% comment %}
          Left
          {% endcomment %}
          <div class="left">
            <div class="left-wrapper">
              {% assign collection_image = '' %}
              {% for prod in block.settings.product %}

                {% for coll in prod.collections %}
                  {% if coll.title == prod.vendor %}
                    {% assign collection_image = coll.image %}
                  {% endif %}
                {% endfor %}

                <div class="hero-product">

                  <div class="product-image">
                    {% for image in prod.images limit: 2 %}
                        {% if forloop.index0 == 0 %}
                          {% assign first = image %}
                        {% endif %}
                        {% if forloop.index0 == 1 %}
                          {% assign second = image %}
                        {% endif %}

                        {% assign length = forloop.length %}
                    {% endfor %}

                    <a href="{{ prod.url }}" title="{{ prod.title }} by {{ prod.vendor }}">
                      <img
                        src="{{ first | image_url: width: 600 }}"
                        class="hero-product-image product-image-{{ forloop.index }}" 
                        data-first="{{ first | image_url: width: 600 }}"
                        {% if length == 1 %}
                          data-second="{{ first | image_url: width: 600 }}"
                        {% else %}
                          data-second="{{ second | image_url: width: 600 }}"
                        {% endif %}
                        alt="{{ prod.title }} by {{ prod.vendor }}"
                      />
                    </a>
                    
                  </div>

                  <div class="product-vendor">
                    {% for collection in prod.collections %}
                      {% if collection.title == prod.vendor %}
                        <a href="{{ collection.url }}" title="{{ prod.vendor }}">
                            <h3>{{ prod.vendor }}</h3>
                        </a>
                      {% endif %}
                    {% endfor %}               
                  </div>

                  <div class="product-title">
                    <a href="{{ prod.url }}" title="{{ prod.title }}{{ ' by ' }}{{ prod.vendor }}">
                      <h2>{{ prod.title }}</h2>
                    </a>
                  </div>

                  <div class="product-variants">
                    <ul class="list">
                        {% assign vinyl = '' %}
                        {% assign cd = '' %}
                        {% assign digi = '' %}
                        {% for vari in prod.variants %}
                            {% if vari.title contains "Vinyl" or vari.title contains "LP" or vari.title contains "ltd" %}
                              {% assign vinyl = vari.title | replace: vari.title, 'Vinyl ' | split: ' ' %}
                          
                            {% elsif vari.title contains "Compact Disc" or vari.title contains "CD" %}
                              {% assign cd = vari.title | replace: vari.title, 'CD' | split: ' ' %}

                            {% elsif vari.title contains "Digital" or vari.title contains "Digi" %}
                              {% assign digi = vari.title | replace: vari.title, 'Digital' | split: ' ' %}

                            {% endif %}
                        {% endfor %}

                        {% for v in vinyl limit: 1 %}
                          <li class="item vinyl">
                            <a href="{{ '/collections/all/vinyl' | url_escape }}" title="{{ shop.name }}{{ ' Vinyl Products' }}">   
                              {{ v | append: ',' }}
                            </a>
                          </li>
                        {% endfor %}
                        {% for c in cd limit: 1 %}
                          {% if digi != blank %}
                            <li class="item cd">
                              <a href="/collections/all/compact-disc" title="{{ shop.name }}{{ ' Compact Disc Products' }}">  
                                {{ c | append: ',' }}
                              </a>
                            </li>
                          {% else %}
                            <li class="item cd">
                              <a href="/collections/all/compact-disc" title="{{ shop.name }}{{ ' Compact Disc Products' }}">
                                {{ c }}
                              </a>
                            </li>
                          {% endif %}
                        {% endfor %}
                        {% for d in digi limit: 1 %}
                          <li class="item digital">
                            <a href="/collections/all/digital" title="{{ shop.name }}{{ ' Digital Products' }}">
                              {{ d }}
                            </a>
                          </li>
                        {% endfor %}
                    </ul>
                  </div>

                  <div class="actions">
                    <a class="button" href="{{ prod.url }}" title="{{ prod.title }}{{ ' by ' }}{{ prod.vendor }}">
                      {% if prod.metafields.product.preorder_status == true %}
                        {{ 'Pre-order' | escape }}
                      {% else %}
                        {{ 'View Product' | escape }}
                      {% endif %}
                    </a>
                  </div>

                </div>

              {% endfor %}
            </div>
          </div>

          {% comment %}
          Right
          {% endcomment %}
          <div class="right">
            <div class="image" style="background-image: url('{{ collection_image | image_url }}'); background-size: cover; background-position: center center;">
            </div>
          </div>

        </div>

      {% elsif block.type == 'announcement' %}
        <div class="swiper-slide slide__announcement" data-type="announcement">

          {% if block.settings.announcement_slide_layout == 'text_right' %}
            <div class="slide-image" style="background-image: url('{{ collection_image | image_url }}'); background-size: cover; background-position: center center;">
            </div>
            <div class="slide-content">
              <div class="announcement-subtitle">
                <span>{{ block.settings.announcement_subtitle | default: 'collborations' }}</span>
              </div>
              <div class="announcement-content">
                <a href="{{ block.settings.announcement_slide_url }}" title="{{ block.settings.announcement_subtitle | default: 'collborations' }}">
                  <h2>{{ block.settings.announcement_subtitle | default: 'collborations' }}</h2>
                </a>
              </div>
            </div>
          {% elsif block.settings.announcement_slide_layout == 'text_left' %}
            <div class="slide-content">
              <div class="announcement-subtitle">
                <span>{{ block.settings.announcement_subtitle | default: 'collborations' }}</span>
              </div>
              <div class="announcement-content">
                <a href="{{ block.settings.announcement_slide_url }}" title="{{ block.settings.announcement_subtitle | default: 'collborations' }}">
                  <h2>{{ block.settings.announcement_subtitle | default: 'collborations' }}</h2>
                </a>
              </div>
            </div>    
            <div class="slide-image" style="background-image: url('{{ collection_image | image_url }}'); background-size: cover; background-position: center center;">
            </div>
          {% endif %}

        </div>

      {% elsif block.type == 'image' %}
        <div class="swiper-slide slide__image" data-type="image">
          <div class="slide-image" style="background-image: url('{{ collection_image | image_url }}'); background-size: cover; background-position: center center;">
          </div>
        </div>

      {% endif %}

    {% endfor %}
  </div>


  <div class="swiper-pagination-container">
    <div class="swiper-pagination"></div>
  </div>

  <div class="swiper-navigation-container">
    <div class="swiper-button-prev">
      {% render 'svg--left-arrow' %}
    </div>
    <div class="swiper-button-next">
      {% render 'svg--right-arrow' %}
    </div>
  </div>

</div>

<script>
  $('.hero-product-image').on('mouseenter', function() {
    if ( $(this).attr('data-second') ) { 
      $(this).attr('src', $(this).attr('data-second'));
    }
  });
  $('.hero-product-image').on('mouseleave', function() {
    if ( $(this).attr('data-second') ) {
      $(this).attr('src', $(this).attr('data-first'));
    }
  });
</script>


{% schema %}
  {
    "name": "Hero Slideshow",
    "tag": "section",
    "class": "hero_slideshow",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_hero",
        "label": "Show Hero",
        "default": true
      }
    ],
    "blocks": [
      {
        "name": "Product",
        "type": "product",
        "settings": [
          {
            "type": "product_list",
            "id": "product",
            "label": "Product",
            "limit": 1
          }
        ]
      },
      {
        "name": "Announcement",
        "type": "announcement",
        "settings": [
          {
            "type": "text",
            "id": "announcement_slide_subtitle",
            "label": "Subtitle"
          },
          {
            "type": "text",
            "id": "announcement_slide_content",
            "label": "Content"
          },
          {
            "type": "url",
            "id": "announcement_slide_url",
            "label": "URL"
          }, 
          {
            "type": "select",
            "id": "announcement_slide_layout",
            "label": "Vertical alignment",
            "options": [
              {
                "value": "text_left",
                "label": "Text on the Left"
              },
              {
                "value": "text_right",
                "label": "Text on the Right"
              }
            ],
            "default": "text_right"
          }
        ]
      },
      {
        "name": "Image",
        "type": "image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image_slide_image",
            "label": "Image"
          },
          {
            "type": "url",
            "id": "image_slide_url",
            "label": "URL"
          } 
        ]
      }
    ]
  }
{% endschema %}
