            <li class="link tiktok">
                <a href="{{ collection.metafields.custom.social_media_links.value.tiktok }}" title="TikTok">
                    {% render 'icon--tiktok' %}
                </a>
            </li>

            <li class="link twitter">
                <a href="{{ collection.metafields.custom.social_media_links.value.twitter }}" title="Twitter">
                    {% render 'icon--twitter' %}
                </a>
            </li>

            <li class="link facebook">
                <a href="{{ collection.metafields.custom.social_media_links.value.facebook }}" title="Facebook">
                    {% render 'icon--facebook' %}
                </a>
            </li>

            <li class="link youtube">
                <a href="{{ collection.metafields.custom.social_media_links.value.youtube }}" title="YouTube">
                    {% render 'icon--youtube' %}
