{{ 'snippet--share-post.css' | asset_url | stylesheet_tag }}

{% comment %} Share {% endcomment %}
<div class="share-block">
    <div class="share-block-wrapper">
    <div>{{ 'Share ' | escape }}</div>
    <div class="links">
        <ul>

        <li class="link twitter">
            <a href="https://twitter.com/share?url={{ shop.url }}{{ product.url }}&text={{ product.title | url_encode }}{{ ' by ' | url_encode }}{{ product.vendor | url_encode }}{{ ' via @daisrecords' | url_encode }}" title="Twitter">
            {% render 'icon--twitter' %}
            </a>
        </li>

        <li class="link facebook">
            <a href="https://www.facebook.com/sharer.php?u={{ shop.url }}{{ product.url }}" title="{{ 'Facebook' | escape }}" target="_blank">
            {% render 'icon--facebook' %}
            </a>
        </li>

        <li class="link pinterest">
            <a href="https://pinterest.com/pin/create/button/?url={{ product.featured_image | image_url }}&description={{ product.title | url_encode }}{{ ' by ' | url_encode }}{{ product.vendor | url_encode }}{{ ' via @daisrecords' | url_encode }}" title="Pinterest">
            {% render 'icon--pinterest' %}
            </a>
        </li>
        
        </ul>
    </div>
    </div>
</div>