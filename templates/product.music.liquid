{% assign add_to_cart = 'Add to cart' %}
{% assign sold_out = 'Sold Out' %}
{% assign unavailable = 'Unavailable' %}
{% assign pre_order = 'Preorder' %}

{{ 'product--music.css' | asset_url | stylesheet_tag }}

<div class="single-product music">
  <div class="single-product-wrapper">

    <meta itemprop="url" content="{{ shop.url }}{{ product.url }}" />
    <meta itemprop="image" content="{{ product | img_url: 'grande' }}" />
    
    <form action="/cart/add" method="post" enctype="multipart/form-data">

      {% comment %} Cart Messages {% endcomment %}
      <div data-ajax-cart-messages="form"></div>

      {% comment %} Upper {% endcomment %}
      <div class="product-section-one">
        <div class="product-section-wrapper">

          <div class="left">
            <div class="product-gallery-swiper swiper">
              <div class="swiper-wrapper">
                {% assign today_date = 'now' | date: '%s' %}
                {% assign preorder_date = product.metafields.music.release_date | date: '%s' %}
                {% if preorder_date > today_date %}
                  <div class="preorder-status">
                    <span>{{ 'Preorder' | escape }}</span>
                  </div>
                {% endif %}
                <script>console.log('{{ today_date | date }}');</script>
                {% for image in product.media %}
                  <div class="swiper-slide">
                    <div class="view-larger" data-image="{{ image | image_url: width: 1000 }}">   
                      {% render 'icon--view-more' %}
                    </div>
                    <img src="{{ image | image_url: width: 950 }}" alt="{{ product.title }} by {{ product.vendor }}" />
                  </div>
                {% endfor %}
              
              </div>

              <div class="product-gallery-pagination-container">
                <div class="swiper-pagination"></div>
              </div>
            
              <div class="product-gallery-navigation-container">
                <div class="product-gallery-prev">
                  {% render 'svg--left-arrow' %}
                </div>
                <div class="product-gallery-next">
                  {% render 'svg--right-arrow' %}
                </div>
              </div>

            </div>
          </div>

          {% comment %} Data {% endcomment %}
          <div class="right">

            <div class="band-name">
              <h2>{{ product.vendor }}</h2>
            </div>

            <div class="product-title">
              <h1>{{ '"' | escape }}{{ product.title }}{{ '"' | escape }}</h1>
            </div>
           
            <div class="actions">
              <div id="product-price" class="price price-field">
                {% assign found_available_variant = false %}
                {% assign variant = product.selected_or_first_available_variant %}
                <span class="price-read">{{ product.variant.price | money_without_trailing_zeros }}</span>
              </div>

              
              <div id="product-add">
                {% if  preorder_date > today_date %}
                  <div class="preorder-status">
                    <span>{{ 'Ships ' | escape }}{{ product.metafields.music.release_date | date: '%m.%d.%y' }}</span>
                  </div>
                {% endif %}

                {% assign variant = product.selected_or_first_available_variant %}
                <input 
                  type="submit" 
                  name="add" 
                  id="add" 
                  value="{% if preorder_date > today_date %}{{ pre_order | escape }}{% else %}{{ add_to_cart | escape }}{% endif %}">
              </div>
            </div>


            {% comment %} Purchase Options {% endcomment %}
            <div id="purchase-options" class="section-three">
              <div class="wrapper">

                <h3>{{ 'Product Details' | escape }}</h3>

                <div data-ajax-cart-messages="{{ item.key }}"></div>          

                {% comment %} Variants {% endcomment %}
                <div id="product-variants" class="variants {% if hide_default_title %} hidden{% endif %}">

                  {% assign hide_default_title = false %}
                  {% if product.variants.size == 1 and product.variants.first.title contains 'Default' %}
                    {% assign hide_default_title = true %}
                  {% endif %}     

                  {% if product.variants.size > 1 %} 

                    <script type="text/javascript" charset="utf-8">
                      jQuery(function() { 
                        var first_variant_price = jQuery("ul li input[type='radio']:checked").attr("data-price");
                        var first_variant_compare_at_price = jQuery("ul li input[type='radio']:checked").attr("data-compare-at-price") || ''; 

                        jQuery(".price-field span").html(first_variant_price);

                        jQuery(".price-field del").html(first_variant_compare_at_price);

                        jQuery("input[type='radio']").click(function() {

                          var variant_price = jQuery(this).attr("data-price");
                          jQuery(".price-field span").html(variant_price);
                          
                          var variant_compare_at_price = jQuery(this).attr("data-compare-at-price") || '';
                          jQuery(".price-field del").html(variant_compare_at_price);

                          jQuery('.price-read').html(variant_price);

                        });

                      });
                    </script>

                    <ul class="variants-list">
                      {% assign found_available_variant = false %}
                      {% for variant in product.variants %}
                        <li class="switch-field">
                            {% if variant.available %}
                                <label for="{{ variant.id }}">
                                  <input type="radio"{% if variant.compare_at_price > variant.price %} data-compare-at-price="{{ variant.compare_at_price | money_without_trailing_zeros }}"{% endif %} data-price="{{ variant.price | money_without_trailing_zeros }}" id="{{ variant.id }}" value="{{ variant.id }}" name="id"{% if found_available_variant == false %}{% assign found_available_variant = true %} checked="checked"{% endif %} />
                                  <span class="variant-name">{{ variant.title }}</span>
                                </label>
                            {% else %}
                                <label for="{{ variant.id }}" class="out-of-stock">
                                  <input type="radio" class="out-of-stock" id="{{ variant.id }}" value="{{ variant.id }}" name="id" /> 
                                  <span class="variant-name">{{ variant.title }}</span>
                                </label>
                            {% endif %}
                          </li>
                      {% endfor %}
                    </ul>

                  {% else %}
                
                      <input type="hidden" name="id" value="{{ product.variants.first.id }}" />
                
                  {% endif %}

                </div>
               
              </div>
            </div>

          </div>

        </div>
      </div>

      {% comment %}
      ---------------------------------------------------------------
      {% endcomment %}
      <div class="product-section-two">
        <div class="product-section-wrapper">

          <div class="left">
            
            <div class="description">
              <h3>{{ 'About' | escape }} {{ '"' | escape }}{{ product.title }}{{ '"' | escape }}</h3>
              <p>{{ product.description | newline_to_br }}</p>
            </div>

            
            <div class="media">
              <div class="title">
                <h3>{{ 'Media' | escape }}</h3>
              </div>
              <div class="media-wrapper">
                {% for vid in product.metafields.music.media.value %}
                  {{ vid }}
                {% endfor %}
              </div>
            </div>
          </div>

          <div class="right">

            <div class="tracklisting">
              <h3>{{ 'Tracklisting' | escape }}</h3>

              {% if product.metafields.dais.tracklisting.value != blank %}
                <ul class="tracklist">
                  {% for track in product.metafields.dais.tracklisting.value %}
                    <li class="track">
                      {% if forloop.index < 10 %}
                        0<span class="counter"></span> 
                      {% elsif forloop.index >= 10 %}
                        <span class="counter"></span> 
                      {% endif %}

                      &nbsp;{{ track }}</li>
                  {% endfor %}
                </ul>
              {% else %}
                <p>Tracklisting coming soon</p>
              {% endif %}
            </div>

            <div class="meta-block">

              <div class="block product-variants">
                <span class="title">{{ 'Formats' | escape }}</span>
                <ul>
                  {% for variant in product.variants %}
                    <li>    
                      <span class="variant-name">{{ variant.title }}</span>              
                    </li>
                  {% endfor %}
                </ul>
              </div>

              <div class="block product-release">
                <span class="title">{{ 'Release date' | escape }}</span>
                <span>{{ product.metafields.music.release_date.value | date: "%b %d, %y" }}</span>
              </div>

              <div class="block catalog-number">
                <span class="title">{{ 'Catalog No.' | escape }}</span>
                <span>{{ product.metafields.music.catalog_number.value | escape }}</span>
              </div>

            </div>

            <div class="link-block">
                {% for collection in product.collections %}
                  {% if collection.title == product.vendor %}
                    <div class="link">
                      <a href="{{ collection.url }}" title="">Artist Page</a>
                    </div>
                  {% endif %}
                {% endfor %}

                <div class="link">
                  <a href="{{ shop.url }}/all?filter.p.vendor={{ product.vendor | url_escape }}" title="">Merchandise</a>
                </div>
                <div class="link">
                  {% for collection in product.collections %}
                    {% for link in collection.metafields.custom.social_media_links.values %}
                      {{ link }}
                    {% endfor %}
                  {% endfor %}
                </div>
            </div>

            {% render 'share-post' %}

          </div>

        </div>
      </div>


    </form>

  </div>
</div>

{% comment %} 
Image Overlay
{% endcomment %}
<div class="image-overlay">
  <div class="wrapper">

    <span class="image-overlay--closer">&times;</span>

    <img src="" alt="" class="image-overlay--img" />
  </div>
</div>

